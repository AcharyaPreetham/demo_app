<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.example.racibo.model.UserDataViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="First Name"
            android:text="@={viewModel.fname}"/>
            <!--android:afterTextChanged="@{(text) -> viewModel.onTextChange(text)}"-->


        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:inputType="textPersonName"
            android:hint="Last Name"
            android:text="@={viewModel.lstName}" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:maxLength="10"
            android:inputType="number"
            android:hint="Phone"
            android:text="@={viewModel.phone}"/>
            <!--android:onTextChanged="@{(text, start, before, count) -> viewModel.fnameTextChanged(text)}"-->

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:layout_margin="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@{viewModel.firstName}" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@{viewModel.lastName}"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="5dp"
            android:text="@{viewModel.ph}"/>
    </LinearLayout>

</layout>